# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# App Configuration
REACT_APP_BASE_URL=https://panchroma.com
REACT_APP_ENVIRONMENT=production

# Analytics
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX
REACT_APP_HOTJAR_ID=

# API Configuration
REACT_APP_API_URL=https://api.panchroma.com
REACT_APP_API_VERSION=v1

# Social Media
REACT_APP_FACEBOOK_URL=https://facebook.com/panchroma
REACT_APP_TWITTER_URL=https://twitter.com/panchroma
REACT_APP_LINKEDIN_URL=https://linkedin.com/company/panchroma
REACT_APP_INSTAGRAM_URL=https://instagram.com/panchroma

# Contact Information
REACT_APP_CONTACT_EMAIL=contact@panchroma.com
REACT_APP_CONTACT_PHONE=+1-800-PANCHROMA
REACT_APP_CONTACT_ADDRESS=New York, NY, USA

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PWA=true
REACT_APP_ENABLE_MONITORING=true

# Third-party Services
REACT_APP_RECAPTCHA_SITE_KEY=
REACT_APP_STRIPE_PUBLIC_KEY=
REACT_APP_MAILCHIMP_API_KEY=

# Error Tracking
REACT_APP_SENTRY_DSN=

# CDN and Assets
REACT_APP_CDN_URL=https://cdn.panchroma.com
REACT_APP_IMAGES_BASE_URL=https://images.panchroma.com

# Performance
REACT_APP_LAZY_LOADING=true
REACT_APP_PRELOAD_CRITICAL_RESOURCES=true